pipeline {
    agent any
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Git Repo') {
            steps {
                checkout scm
            }
        }

        stage('Build and Run') {
            steps {
                sh 'docker build -t image1 .'
                sh 'docker stop website || true && docker rm website || true'
                sh 'docker run --name website -d -p 8081:80 image1'
            }
        }

        stage('Testing') {
            steps {
                sh 'curl -I localhost:8081'
            }
        }

        stage('Tag and Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-auth', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    script {
                        def buildId = env.BUILD_ID // Unique ID for tagging
                        sh ""
                            docker login -u ${{DOCKER_USERNAME}} -p ${{DOCKER_PASSWORD}}
                            docker tag image1 riya2207/2244_ica2:latest
                            docker tag image1 riya2207/2244_ica2:develop-${buildId}
                            docker push riya2207/2244_ica2:latest
                            docker push riya2207/2244_ica2:develop-${buildId}
                        ""
                    }
                }
            }
        }
    }
}
